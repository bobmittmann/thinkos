PATTERN = 'Release\usbamp.bin'

findfirst dh PATTERN FNAME

if result=0 then
  findclose dh
  messagebox "Firmware file not found!" "File not found!"
  exit
endif

findclose dh
getdir BASEDIR
strconcat BASEDIR 'Release\'
makepath IMAGE BASEDIR FNAME

;messagebox IMAGE "Firmware!"

sendln
send 25 ; Ctrl+Y
wait '[y]?' 'CC'

if result=1 then
  send 'y'
else
  send 24 ; Ctrl+X
endif

wait 'cancel) ...'
ymodemsend IMAGE

if result=1 then
  wait 'OK'
endif

